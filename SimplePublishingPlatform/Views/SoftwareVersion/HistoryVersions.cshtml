@model System.Collections.Generic.List<SimplePublishingPlatform.Models.SoftwareVersion>

@{
    ViewBag.Title = "title";
}

<style>
    .table-hover>tbody>tr:hover>td {
        background-color:#dcdcdc
    }
</style>

<div class="row table-responsive">
    <table class="table table-striped table-hover">
        <tr>
            <th>版本名称</th>
            <th>更新内容简介</th>
            <th>更新时间</th>
        </tr>
        @foreach (var version in Model)
        {
            <tr>
                <td>@Html.ActionLink(version.VersionName,"Index","SoftwareVersion",new { versionName = version.VersionName },null)</td>
                <td>@version.Description</td>
                <td>@version.PublishTime</td>
            </tr>
        }
    </table>
</div>